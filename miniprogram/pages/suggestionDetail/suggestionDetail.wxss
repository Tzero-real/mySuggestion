/* miniprogram/pages/suggestionGuide/suggestionGuide.wxss */
page {
  height: 100%;
}

.detail {
  position: relative;
  height: 100%;
}

.body {
  padding: 0 20px;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.detail-content {
  padding-top: 20px;
  word-wrap: break-word;
}

.content-text {
  font-size: 16px;
  color: #333333;
  line-height: 1.5;
}

.content-image {
  margin-top: 20px;
}

.image-item {
  margin: 0 10px 10px 0;
}

.detail-footer {
  display: flex;
  width: 100%;
  color: #999999;
  font-size: 14px;
  margin: 20px 0;
}

.detail-footer-remark {
  display: inline-flex;
  align-items: center;
}

.remark-text {
  margin-left: 10px;
  font-size: 16px;
  line-height: 16px;
  color: #999999;
  text-align: left;
}

.detail-footer-comment {
  display: inline-flex;
  align-items: center;
  margin-left: 40%;
}

.footer-comment-text {
  margin-left: 10px;
  font-size: 16px;
  line-height: 16px;
  color: #999999;
  text-align: left;
}

/* 提交评论 */
.message {
  width: 100%;
  height: 50px;
  display: flex;
  padding: 10px auto;
  background-color: #fff;
  position: fixed;
  bottom: constant(safe-area-inset-bottom);
  bottom: env(safe-area-inset-bottom);
}

.form {
  width: 100%;
  margin: 0 auto;
}

.input-style {
  width: 65%;
  height: 40px;
  border-radius: 25px;
  background: #f3f3f5;
  font-size: 14px;
  padding-left: 15px;
  margin-right: 3%;
  float: left;
  color: #808286;
}

.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 18%;
  height: 40px;
  font-size: 14px;
  border-radius: 10px;
  color: #2c3036;
  background: #f3f3f5;
  letter-spacing: 2px;
  margin: 0px;
  padding: 0px;
}

button::after {
  border: none;
}

button {
  background: none;
}

/* 全部评论 */
.allMessage {
  clear: both;
  margin-top: 50%;
  /* width: 92%;
  margin: 0 auto;
  padding: 4%; */
  background-color: #fff;
  padding-bottom: 120px;
}

.allMessage .title {
  border-left: 5px solid #2c3036;
  /* margin: 12px 0; */
  height: 20px;
  line-height: 20px;
  text-indent: 10px;
  color: #2c3036;
  font-size: 18px;
  margin-bottom: 10px;
}

.comment-item {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 16px 0;
  border-bottom: 1px solid #f3f3f5;
}

.show {
  display: block;
}

.hide {
  display: none;
}

.comment-person {
  display: flex;
  align-items: center;
}

.comment-person-info {
  flex: 1;
}

.comment-person-name {
  font-size: 16px;
  font-weight: 800;
  color: #2c3036;
}

.comment-time {
  font-size: 13px;
  color: #808286;
}

.comment-text {
  font-size: 14px;
  color: #2c3036;
  line-height: 25px;
  padding: 24px 0 0 20px;
}
